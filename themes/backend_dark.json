{
  "name": "Backend Dark Theme",
  "type": "dark",
  "base": "vs-dark",

  "colors": {
    // Side Bar
    "sideBar.background": "#0a0a0a50",
    "sideBar.foreground": "#ffffffbb",
    "sideBar.border": "#706f6f20",
    "sideBarSectionHeader.foreground": "#fff",

    // Activity Bar
    "activityBar.background": "#0a0a0a90",
    "activityBar.foreground": "#fff",
    "activityBarBadge.background": "#BB9AF7",
    "activityBarBadge.foreground": "#0a0a0a90",
    "activityBar.activeBorder": "#BB9AF7",  // cor da linha lateral esquerda do Ã­cone ativo
    "activityBar.border": "#706f6f20",

    // Title Bar
    "titleBar.activeBackground": "#0a0a0a60",
    "titleBar.activeForeground": "#fff",
    "titleBar.inactiveBackground": "#0a0a0a90",       // ADICIONADO
    "titleBar.inactiveForeground": "#cccccc",         // ADICIONADO
    "titleBar.border": "#706f6f20",

    // Tabs & Editor Groups
    "editorGroup.border": "#fff",
    "editorGroupHeader.tabsBackground": "#0a0a0a60",
    "editorGroupHeader.noTabsBackground":"#fff",
    "tab.activeBackground": "#0a0a0a20",
    "tab.inactiveBackground": "#0a0a0a60",
    "tab.border": "#706f6f20",

    // List (como no Explorer)
    "list.activeSelectionBackground": "#44475A80",
    "list.activeSelectionForeground": "#fafafc",
    "list.hoverBackground": "#44475A80",
    "list.focusOutline": "#BB9AF7",

    // Panel e Status Bar
    "panel.border": "#706f6f20",
    "statusBar.background": "#0a0a0a90",
    "statusBar.border": "#706f6f20",

    // Editor
    "editor.background": "#0a0a0a20",
    "editor.foreground": "#F8F8F2",
    "editor.lineHighlightBackground": "#171718",
    "editorCursor.foreground": "#BB9AF7",
    "editor.selectionBackground": "#44475A80",
    "editor.inactiveSelectionBackground": "#44475A40",
    "editorIndentGuide.background1": "#44475A",
    "editorIndentGuide.activeBackground1": "#6272A4"
  },

  "tokenColors": [
    {
      "scope": ["comment"],
      "settings": {
        "foreground": "#6272A4",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["keyword"],
      "settings": {
        "foreground": "#ff54b5"
      }
    },
 
    {
      "scope": [
        "string.quoted.single.php",
        "string.quoted.double.php",
        "string"
      ],
      "settings": {
        "foreground": "#f1fa99",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#6cb1ff"
      }
    },
    {
      "scope": ["variable","meta.fstring.python"],
      "settings": {
        "foreground": "#eff2f3"
      }
    },
    {
      "scope": [
        "support.function",
        "support.function.builtin"
      ],
      "settings": {
        "foreground": "#6cb1fd",
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "support.class",
        "entity.name.type",
        "support.other.namespace",
        "support.constant",
        "keyword.operator.class",
        "entity.name.function",
        "entity.other.inherited-class.php"
      ],
      "settings": {
        "foreground": "#8BE9FD"
      }
    },
    {
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#BD93F9"
      }
    },
    {
      "scope": [
        "keyword.operator.class",
        "keyword.operator.key",
        "keyword.operator.comparison",
        "keyword.operator.null-coalescing",
        "keyword.operator.string",
        "keyword.operator.arithmetic"
      ],
      "settings": {
        "foreground": "#ff54b5",
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#ff54b5",
        "fontStyle": "italic bold"
      }
    },
    {
      "scope": ["punctuation.definition.variable"],
      "settings": {
        "foreground": "#eff2f3",
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#52fd8bec"
      }
    },
    {
      "scope": ["log.info"],
      "settings": {
        "foreground": "#52fd8bec",
      }
    },
    {
      "scope": ["log.warning"],
      "settings": {
        "foreground": "#FFBF00"
      }
    },
    {
      "scope": ["log.error"],
      "settings": {
        "foreground": "#BF181D"
       
      }
    },
    {
      "scope": ["log.debug"],
      "settings": {
        "foreground": "#880ED4"
        
      }
    },
    {
      "scope": [
            // "meta.function-call.generic.python"
            // "meta.function-call.python",
            "meta.member.access.python"
          ],
      "settings": {
        "foreground": "#52fd8bec"
        
      }
    },
    {
      "scope": [
        "support.type.exception.python",
        "entity.name.type.class.python",
        "meta.class.python"
          ],
      "settings": {
        "foreground": "#8BE9FD"
      }
    },
    {
      "scope": ["constant.character.escape.python"],
      "settings": {
        "foreground": "#ff54b5"
      }
    },
    //HTML CONFIG
    {
    "scope": [
        "entity.name.tag.html",
        "meta.tag.structure.head.start.html",
        "meta.tag.structure.head.end.html",
        // "text.html.derivative"
      ],
      "settings": {
        "foreground": "#ff54b5"
      }
    },
    {
    "scope": [
        "meta.attribute.class.html",
        "meta.attribute.id.html",
        "meta.attribute.src.html",
        "meta.attribute.other.html",
        "meta.attribute.property.html"
      ],
      "settings": {
        "foreground": "#52fd8bec"
      },
    },
  //JAVA SCRIPT CONFIG
    {
    "scope": [
      "variable.other.object.js",
      "meta.function-call.js",
      	"variable.other.object.js"
 

      ],
      "settings": {
        "foreground": "#6Cb1fd"
      }
    }

  ]
}
