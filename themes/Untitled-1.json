{
  "name": "Backend Dark Theme",
  "type": "dark",
  "base": "vs-dark",

  "colors": {
    
    "sideBar.background": "#0a0a0a50",
    "sideBar.foreground": "#ffffffbb",
    "sideBar.border": "#706f6f",
      "sideBarSectionHeader.foreground": "#fff",
    "editorGroup.border": "#6f706f",
    "tab.activeBackground": "#0a0a0a20",
    "tab.inactiveBackground": "#0a0a0a20",
    "tab.border": "#706f6f",
    "list.activeSelectionBackground": "#44475A80",
    "list.activeSelectionForeground": "#fafafc",
    "list.hoverBackground": "#44475A80",
    "panel.border": "#706f6f",
    "statusBar.background": "#0a0a0a90",
    "statusBar.border": "#706f6f",
    "editorGroupHeader.tabsBackground": "#0a0a0a90",
    "activityBar.background":"#0a0a0a90",
    "activityBar.foreground": "#fff",
    "activityBarBadge.background": "#BB9AF7",
    "activityBarBadge.foreground": "#0a0a0a90",
    "titleBar.activeBackground": "#0a0a0a90", 
    "titleBar.activeForeground": "#fff",
     "titleBar.border": "#706f6f",
    
    "editor.background": "#0a0a0a20",

    
    "editor.foreground": "#F8F8F2",

    
    "editor.lineHighlightBackground": "#171718",

    
    "editorCursor.foreground": "#FF79C6",

    
    "editor.selectionBackground": "#44475A80",

    
    "editor.inactiveSelectionBackground": "#44475A40",

    
    "editorIndentGuide.background1": "#44475A",

    
    "editorIndentGuide.activeBackground1": "#6272A4"
  },

  "tokenColors": [
    {
      
      "scope": ["comment"],
      "settings": {
        "foreground": "#6272A4", 
        "fontStyle": "italic"    
      }
    },
    {
      
      "scope": ["keyword"],
      "settings": {
        "foreground": "#ff54b5" 
      }
    },
    {
    "scope": [
        "string.quoted.single.php",
        "string.quoted.double.php"
    ],
    "settings": {
        "foreground": "#f1fa",
        "fontStyle": "italic"
    }
    },
    
    {
    "scope": [
        "support.type.property-name.json"
    ],
    "settings": {
        "foreground": "#6cb1ff", 
        "fontStyle": ""
    }
    },
    {
      
      "scope": ["variable"],
      "settings": {
        "foreground": "#eff2f3" 
      }
    },
   {
    "scope": [
        "support.function",         
        "support.function.builtin" 
       
    ],
    "settings": {
        "foreground": "#6cb1ff"  ,  
         "fontStyle": "italic"

    }
    },
    {
        "scope": [
            "support.class",
            "entity.name.type",             
            "support.other.namespace",      
            "support.constant",             
            "keyword.operator.class",       
            "entity.name.function"  ,        
            "entity.other.inherited-class.php"
        ],
        "settings": {
            "foreground": "#8BE9FD"
            
        }
        },
    {
      
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#BD93F9" 
      }
    },
    {
      
      "scope": [
        "keyword.operator.class",
        "keyword.operator.key",
        "keyword.operator.comparison",
        "keyword.operator.null-coalescing",
        "keyword.operator.string",
        "keyword.operator.arithmetic"
    ],
      "settings": {
        "foreground": "#ff54b5" ,
         "fontStyle": "bold" 
      }
    },
    {
      
      "scope": ["storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#ff54b5", 
        "fontStyle": "italic bold"
      }
    },
    {
      "scope": ["punctuation.definition.variable"],
      "settings": {
        "foreground": "#eff2f3", 
        "fontStyle": "italic "
      }
    },
    {
      
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#52fd8bec" 
      }
    }
  ]
}
